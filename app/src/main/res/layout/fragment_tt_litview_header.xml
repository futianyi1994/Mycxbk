<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_tt_header_viewpagerId"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/defaultcovers"/>
    <LinearLayout
        android:id="@+id/fragment_tt_header_linearlayoutId"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#bbb"
        android:gravity="right"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fragment_tt_header_point1_imageviewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dot_1"/>
        <ImageView
            android:id="@+id/fragment_tt_header_point2_imageviewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dot_1"/>
        <ImageView
            android:id="@+id/fragment_tt_header_point3_imageviewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dot_1"/>

    </LinearLayout>

</LinearLayout>